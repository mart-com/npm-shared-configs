{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@mart-com/dev-tools": "^0",
    "@mart-com/prettier-config": "^0.2.0",
    "lerna": "^3.18.4"
  },
  "scripts": {
    "lint": "eslint --ext .js,.jsx .",
    "lint:fix": "eslint --ext .js,.jsx . --fix",
    "prettier": "prettier --write '**'",
    "prettier:check": "prettier --check '**'",
    "ci:lint": "yarn lint && pretty-quick --branch master --check"
  },
  "prettier": "@mart-com/prettier-config",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-push": "npm run prettier:check"
    }
  },
  "lint-staged": {
    "src/**.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ]
  }
}
